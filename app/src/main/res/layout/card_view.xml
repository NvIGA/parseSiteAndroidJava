<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/contLayout"
        android:layout_width="match_parent"
        android:layout_height="300dp">

        <android.support.constraint.Guideline
            android:id="@+id/guideline"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.9"
            app:layout_constraintBottom_toBottomOf="@+id/contLayout"
            app:layout_constraintEnd_toEndOf="@+id/contLayout"
            app:layout_constraintStart_toStartOf="@+id/contLayout"
            app:layout_constraintTop_toTopOf="@+id/contLayout" />

        <ImageView
            android:id="@+id/imageGirls"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:contentDescription="@string/foto"
            app:layout_constraintBottom_toBottomOf="@+id/contLayout"
            app:layout_constraintEnd_toEndOf="@+id/contLayout"
            app:layout_constraintStart_toStartOf="@+id/contLayout"
            app:layout_constraintTop_toTopOf="@+id/contLayout"
            app:srcCompat="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:textSize="24sp"
            android:textColor="@color/mainText"
            android:background="#B4020007"
            app:layout_constraintBottom_toBottomOf="@+id/contLayout"
            app:layout_constraintEnd_toEndOf="@+id/contLayout"
            app:layout_constraintStart_toStartOf="@+id/contLayout"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:gravity="center_horizontal"
           />
    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>